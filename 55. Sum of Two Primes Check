#include <stdio.h>
int isPrime(int n){
    if(n<=1) return 0;
    for(int i=2;i<=n/2;i++)
        if(n%i==0) return 0;
    return 1;
}
int main(){
    int n,i,flag=0;
    printf("Enter number: ");
    scanf("%d",&n);
    for(i=2;i<=n/2;i++){
        if(isPrime(i) && isPrime(n-i)){
            printf("%d = %d + %d\n",n,i,n-i);
            flag=1;
        }
    }
    if(!flag) printf("Cannot be expressed as sum of two primes");
    return 0;
}
