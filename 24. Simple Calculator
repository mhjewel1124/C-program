#include <stdio.h>
int main() {
    char op; float a,b;
    printf("Enter + - * / : ");
    scanf(" %c",&op);
    printf("Enter two numbers: ");
    scanf("%f %f",&a,&b);
    if(op=='+') printf("%.2f",a+b);
    else if(op=='-') printf("%.2f",a-b);
    else if(op=='*') printf("%.2f",a*b);
    else if(op=='/') printf("%.2f",a/b);
    else printf("Invalid");
    return 0;
}
