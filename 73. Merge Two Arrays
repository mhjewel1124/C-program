#include <stdio.h>
int main(){
    int a[50],b[50],c[100],n1,n2,i,j;
    printf("Enter size of 1st & 2nd array: ");
    scanf("%d %d",&n1,&n2);
    for(i=0;i<n1;i++) scanf("%d",&a[i]);
    for(i=0;i<n2;i++) scanf("%d",&b[i]);
    for(i=0;i<n1;i++) c[i]=a[i];
    for(j=0;j<n2;j++) c[i++]=b[j];
    printf("Merged: ");
    for(i=0;i<n1+n2;i++) printf("%d ",c[i]);
}
